<ul class='posters'>
  <% movies[0..6].each do |movie| %>
    <li>
      <%= link_to play_path(movie.id) do %>
        <%= image_tag poster_url(movie.poster_path), draggable: false %>
        <%= link_to 'Delete', movie_path(movie),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      <% end %>
    </li>
  <% end %>
</ul>
