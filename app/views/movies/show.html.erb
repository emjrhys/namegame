<%= link_to 'Back', root_path %>

<div id='namegame'>
  <h1>
    <!-- <%= image_tag 'https://image.tmdb.org/t/p/w300' + @movie.poster_path %> -->
    <%= @movie.title %>
  </h1>

  <ul class='actors'>
    <% @movie.cast.each do |actor| %>
      <li>
        <%= image_tag 'https://image.tmdb.org/t/p/w500' + actor.profile_path %>
        <!-- <h3><%= actor.character %></h3> -->
        <!-- <p><%= actor.name %></p> -->
      </li>
    <% end %>
  </ul>

  <section class='answers'>
    <% @names.each do |e| %>
      <span><%= e[:name] %></span>
    <% end %>
  </section>
</div>
